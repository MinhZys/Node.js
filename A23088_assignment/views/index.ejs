<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product List </title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <h1>Product List </h1>
        <a href="/add"> Add Product </a>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Created_at </th>
                    <th>Hành Động </th>
                </tr>
            </thead>
            <tbody>
                <% product.forEach(product => { %>
                    <tr>
                        <td><%= product.name %></td>
                        <td><%= product.description %></td>
                        <td><%= product.price %></td>
                        <td><%= product.created_at %></td>
                        <td>
                            <a href="/edit/<%= product._id %>">Edit</a>
                            <a href="/delete/<%= product._id %>" onclick="return confirm('Do you want to delete ');"> Xóa </a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>